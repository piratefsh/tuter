<!-- Partial for user with organization role -->
                    
<div id='Org_Content_View_Options' class="tabs">

	<% if not @organizations.any? %>
    	<div id="new_organization" ><%= render 'organizations/form' %>
    	</div>
    <% end %>
   
    <% if @organizations.any? %>
        <h2 class="inline"><%= @organizations.first.name %>  </h2>
    	<%= link_to "Show", @organizations.first%>
    	<ul class="secondary_tabs">
		   <li><a href="#org_programs">Programs</a></li>
		   <li> <a href="#org_students_tutors" >Students and Tutors</a></li>
    	</ul>

		<div id='org_students_tutors'>
			<p>//Coming soon</p>
		</div>

	<div id='org_programs'>
		<ul class="programs_list">
			<% @programs.each do |program| %>
				<li><%= link_to program do %>
					<h4><%= program.name %></h4>
					<% end %>
					<p>Description:<%= program.desc %></p>
				</li>
			<% end %>
		</ul>
    <%= render 'programs/form' %>
    </div>
	<% end %>
</div>

