
<div id="profile">

<form>
<div id="profileButtons" onload="generateProfileButtons()"></div>
</form>

<!-- Display User Profile Picture-->
<% if current_user.photo? %>
    <%= image_tag(current_user.photo, :alt => "Profile Picture") %>
<% else %>
    <%= image_tag("/images/def_profile_pic.jpg", :alt => "Profile Picture")%>
<% end %>

<h2><%=current_user.first_name %> <%=current_user.last_name %></h2>

<h3>Roles</h3>
<ul>
    <% if current_user.role? :student %> <li>Student</li> <% end %>
    <% if current_user.role? :tutor %><li>Tutor</li> <% end %>
    <% if current_user.role? :org %> <li>Organization</li><% end %>
</ul>
<br/>

<h3>Contact Info</h3>
<div><a href="mailto:<%=current_user.email%>"><%= current_user.email %></a></div>
<div><% if current_user.fb_profile %><%= link_to "Facebook Profile", current_user.fb_profile %><% end %></div>


<h3>Personal Information</h3>
<div>Age: 22</div>
<div>Year in School: Senior</div>
<div>Transportation: Bus, Walk</div>
<div>Tutor Rating: <a>**** (4)</a></div>
<br/>

<%= button_to "Edit Profile",edit_user_registration_path(current_user),:method => "get" %>

</div>
