<%= content_for :header do %>
    <%= stylesheet_link_tag 'form_style', :media => "all" %>
<% end %>

<%= form_for(@organization) do |f| %>
    <div class="field form_element">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class="field form_element">
        <%= f.label 'Brief Description' %>
        <%= f.text_field :desc %>
    </div>

    <div class="field form_element">
        <%= f.label 'About' %>
        <%= f.text_field :about %>
    </div>

    <div class="field form_element">
        <%= f.label 'Official Site' %>
        <%= f.url_field :website %>
    </div>

    <div class="field form_element">
        <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>

    <div class="field form_element">
        <%= f.hidden_field :email, :value => @email %>
    </div>

    <div class="actions small_button float_right">
        <%= f.submit %>
    </div>

    <div class="actions small_button float_left">
        <%= button_to "Cancel", {}, :class => "cancel", :id=>"cancel_create" %>
    </div>

<% end %>

