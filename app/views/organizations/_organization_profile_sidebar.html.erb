<!-- Partial for user profile sidebar. Displays user's personal information -->
<% content_for :header do %>
    <% stylesheet_link_tag "user_profile", :media => "all" %>
<% end %>
<div id="profile">
    <!-- Display User Profile Picture-->
    <%= image_tag("/images/organizationPendingImage.jpg", :alt => "Profile Picture")%>

    <h2><%=@organization.name %></h2>
    <p><%=@organization.desc %></p>

    <h3>Contact Info</h3>
    <div><a href="mailto:<%=@user.email%>"><%= @user.email %></a></div>

    <% if current_user and current_user.id == @organization.user_id %>
    <div class="small_button unimp">
    <%= button_to "Edit Organization", edit_organization_path(@organization), :method=> :get %>
    </div>
    <% end %>

</div>
