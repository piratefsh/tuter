<%= content_for :header do%>
    <%= stylesheet_link_tag    "search", :media => "all" %>
    <%= javascript_include_tag 'sortable_table.js' %>
    <%= javascript_include_tag 'search_table.js' %>
<% end %>
<h1>Find A Tutor</h1>
<div id = "sidebar">
    <h2>Search</h2>
    <form method="get">
        <div class="form_element">
            <label>Search All</label>
            <label class="helper_text">Search any</label>
            <input id="keyword_search" type="text" name="general_search"/>
        </div> 

        <div class="form_element">
            <label>Location</label>
            <label class="helper_text">Zip code</label>
            <input type="text" name="location"/>
        </div>

        <div class="form_element">
            <label>Course</label>
            <label class="helper_text">Course code</label>
            <input type="text" name="course"/>
        </div>
        <div class="form_element">
            <label>Type</label>
            
            <div class="checkbox_group">
                <input type="checkbox" value="drop in" name="dropin"/>
                <label class="checkbox" for="dropin">Drop in</label>
            </div>
            <div class="checkbox_group">
                <input type="checkbox" name="group"/>
                <label class="checkbox"for="group">Group</label>
            </div>
        </div>
        
        <div class="form_element">
            <label>Rate</label>
            <input type="number" name="rates"></input>
        </div>

        <div class="form_element">
            <label>Organization</label>
            <label class="helper_text">Tutoring Organizations</label>
            <input type="text" name="organization"/>
        </div>
        <input value="Search!" type="submit"/>
    </form>
</div>

<div id="results">
    <h2>Results</h2>
    <table id="results_table"> 
    <thead> 
    <tr> 
        <th>Last Name</th> 
        <th>First Name</th> 
        <th>Course</th> 
        <th>Groups</th> 
        <th>Location</th> 
        <th>Availability</th> 
        <th>Type</th> 
        <th>Rate</th> 
        <th>Currently Tutoring</th> 
    </tr> 
    </thead> 

    <tbody> 

    <% @users.each do |user| %>
    
    <tr> 
        <td><%= user.first_name %></td> 
        <td><%= user.last_name %></td> 
        <td>CS302</td> 
        <td>Group</td> 
        <td>Helen C White</td> 
        <td>5pm-6pm</td> 
        <td>Drop-In</td> 
        <td>$50.00</td> 
    </tr>     

    <% end %>
    </tbody> 
    </table> 
</div>

<script>
    $('div#results').height = 500px;
</script>