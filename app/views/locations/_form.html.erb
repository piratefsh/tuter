<h3>Update Location</h3>
<%= form_for [resource_name, resource.with_location], :url => registration_path(resource_name) do |f| %>

  <% f.fields_for :location do |loc| %>
    <div class="field">
      <%= loc.label :name %><br />
      <%= loc.text_field :name %>
    </div>
    <div class="field">
      <%= loc.label :address %><br />
      <%= loc.text_field :address %>
    </div>
    <div class="field">
      <%= loc.label :longitude %><br />
      <%= loc.text_field :longitude %>
    </div>
    <div class="field">
      <%= loc.label :latitude %><br />
      <%= loc.text_field :latitude %>
    </div>

    <div class="action">
      <label></label>
      <%= loc.submit %>
    </div>
  <% end %>
<% end %>

